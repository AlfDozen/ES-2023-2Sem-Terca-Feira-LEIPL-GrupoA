            <ToggleGroup fx:id="file_chooser" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="optionOnline" layoutX="415.0" layoutY="123.0" mnemonicParsing="false" onAction="#setRemote" prefHeight="18.0" prefWidth="119.0" text="Ficheiro online" toggleGroup="$file_chooser" />
