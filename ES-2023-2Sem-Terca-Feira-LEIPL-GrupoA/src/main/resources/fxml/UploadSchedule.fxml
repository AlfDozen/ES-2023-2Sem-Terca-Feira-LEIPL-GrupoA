      <Button fx:id="saveFileCSV" layoutX="241.0" layoutY="461.0" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#saveFileCSV" prefHeight="62.0" prefWidth="144.0" text="Guardar em CSV" textAlignment="CENTER" visible="false" />
      <Label fx:id="fileChosen" alignment="CENTER" layoutX="411.0" layoutY="175.0" prefHeight="50.0" prefWidth="265.0" text="Nenhum ficheiro importado." visible="false" />
      <Button fx:id="viewSchedule" layoutX="341.0" layoutY="367.0" minHeight="49.0" minWidth="131.0" mnemonicParsing="false" onAction="#viewSchedule" prefHeight="62.0" prefWidth="131.0" text="Consultar Horário" textAlignment="CENTER" visible="false" wrapText="true" />
