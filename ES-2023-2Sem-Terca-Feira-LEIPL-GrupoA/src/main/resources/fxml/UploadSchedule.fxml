      <Button fx:id="getFile" layoutX="256.0" layoutY="175.0" minHeight="49.0" minWidth="144.0" mnemonicParsing="false" onAction="#getFile" prefHeight="49.0" prefWidth="154.0" text="Seleccionar ficheiro" textAlignment="CENTER" visible="false" wrapText="true" />
